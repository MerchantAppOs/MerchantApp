                            <Image Source="/Images/Catalog.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem  Foreground="Wheat" Background="#353545" Command="{Binding ListOfProducts, UpdateSourceTrigger=PropertyChanged}" Header="Mal adları">
                        <MenuItem.Icon>
